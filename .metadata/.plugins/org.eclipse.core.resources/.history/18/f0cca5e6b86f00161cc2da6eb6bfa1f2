/**
 * 
 * @author Michelle Li
 * Period 1	
 *
 */

public class Product {
	
	static String companyName, name;
	static double cost, unitPrice, discount, unitSalePrice;
	static int quantitySold;
	
	public Product() {
		name = "";
		companyName = "";
		cost = 0;
		unitPrice = 0; 
		discount = 0;
		unitSalePrice = 0;
		quantitySold = 0;
		Product.unitSalePrice = calculateSalePrice();
	}
	
	public Product(String name, double cost, double price, double discount, int quantity) {
		Product.name = name;
		Product.companyName = "";
		Product.cost = cost;
		Product.unitPrice = price;
		Product.discount = discount;
		Product.quantitySold = quantity;
		Product.unitSalePrice = calculateSalePrice();
		
	}
	
	public Product(String name, double cost, double price, int quantity) {
		Product.discount = 0;
		Product.name = name;
		Product.cost = cost;
		Product.unitPrice = price;
		Product.quantitySold = quantity;
		Product.unitSalePrice = calculateSalePrice();
	}
	
	private double calculateSalePrice() {
		Product.unitSalePrice = Product.unitPrice * (100 - Product.discount) / 100.0;
		return Product.unitSalePrice;
		
	}
	
	public void setName(String name) {
		Product.name = name;
	}
	
	public void setCost(double cost) {
		Product.cost = cost;
	}
	
	public void setPrice(double price) {
		Product.unitPrice = price;
		Product.unitSalePrice = price;
	}
	
	public void setDiscount(double discount) {
		Product.discount = discount;
		Product.unitSalePrice = Product.unitSalePrice * discount / 100;
	}
	
	public void setCompany(String company) {
		Product.companyName = company;
	}
	
	public String getName() {
		return Product.name;
	}
	
	public double getCost() {
		return Product.cost;
	}
	
	public double getPrice() {
		return Product.unitPrice;
	}
	
	public double getDiscount() {
		return Product.discount;
	}
	
	public double getSalePrice() {
		return Product.unitSalePrice;
	}
	
	public int getQuantitySold() {
		return Product.quantitySold;
	}
	
	public String getCompanyName() {
		return Product.companyName;
	}
	
	private double unitProfit() {
		return Product.unitSalePrice - Product.cost;
	}
	
	public double totalProfit() {
		return Product.quantitySold * (Product.unitSalePrice - Product.cost);
	}
	
	public String toString() {
		String s;
		s = companyName + "\n";
		s += "------------------------------------------------------\n";
		s += String.format("%s: \nCost           = $%8.2f\n", name, getCost());
		s += String.format("Price          = $%8.2f\n", getPrice());
		s += String.format("Discount       = %8.2f%s", getDiscount(), "%\n");
		s += String.format("Sale Price     = $%8.2f\n", getSalePrice());
		s += String.format("Quantity Sold  = $%8d\n", getQuantitySold());
		s += String.format("Profit/unit    = $%8.2f\n", unitProfit());
		s += String.format("Total Profit   = $%8.2f\n", totalProfit());
		return s;
	}

	public void setQuantitySold(int quantity) {
		Product.quantitySold = quantity;
		
	}
}
