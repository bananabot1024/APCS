/**
 * 
 * @author Michelle Li
 * Period 1	
 *
 */

public class Product {
	
	static String companyName, name;
	static double cost, unitPrice, discount, unitSalePrice;
	static int quantitySold;
	
	public Product() {
		name = "";
		companyName = "";
		cost = 0;
		unitPrice = 0; 
		discount = 0;
		unitSalePrice = 0;
		quantitySold = 0;
	}
	
	public Product(String name, double cost, double price, double discount, int quantity) {
		Product.name = name;
		Product.companyName = "";
		Product.cost = cost;
		Product.unitPrice = price;
		Product.discount = discount;
		Product.quantitySold = quantity;
		Product.unitSalePrice = calculateSalePrice();
		
	}
	
	public Product(String name, double cost, double price, int quantity) {
		Product.discount = 0;
		Product.name = name;
		Product.cost = cost;
		Product.unitPrice = price;
		Product.unitSalePrice = price;
		Product.quantitySold = quantity;
		
	}
	
	private double calculateSalePrice() {
		Product.unitSalePrice = Product.unitPrice * Product.discount / 100.0;
		return Product.unitSalePrice;
		
	}
	
	public void setName(String name) {
		Product.name = name;
	}
	
	public void setCost(double cost) {
		Product.cost = cost;
	}
	
	public void setPrice(double price) {
		Product.unitPrice = price;
	}
	
	public void setDiscount(double discount) {
		Product.discount = discount;
		Product.unitSalePrice = Product.unitSalePrice * discount / 100;
	}
	
	public void setCompany(String company) {
		Product.companyName = company;
	}
	
	public String getName() {
		return Product.name;
	}
	
	public double getCost() {
		return Product.cost;
	}
	
	public double getPrice() {
		return Product.unitPrice;
	}
	
	public double getDiscount() {
		return Product.discount;
	}
	
	public double getSalePrice() {
		return Product.unitSalePrice;
	}
	
	private double unitProfit() {
		return Product.unitPrice - Product.unitSalePrice;
	}
	
}
